{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es6",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true
    },
    "files": [
        "./src/index.tsx",
        // We would like to use ./node_modules but there are a few errors in index.d.ts version 1.4.1
        "./typings/jsxgraph/distrib/index.d.ts"
    ],
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}